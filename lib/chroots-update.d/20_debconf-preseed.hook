SET_SELECTIONS="/usr/bin/debconf-set-selections"

if [ ! -x "${SET_SELECTIONS}" ]; then
	echo "W: Cannot pre-seed debconf values: ${SET_SELECTIONS} not found."
	exit 1
else
	CONFDIR="/home/mini-buildd/.mini-buildd/debconf-preseed.d"

	for c in $(find "${CONFDIR}" -name "*.conf"); do
		echo "I: Pre-seeding debconf values from ${c}..."
		${SET_SELECTIONS} "${c}"
	done
fi
