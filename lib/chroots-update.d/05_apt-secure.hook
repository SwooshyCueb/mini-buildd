# HOOK: Add local extra keys via apt-key

KEYDIR="/home/mini-buildd/.mini-buildd/apt-secure"

# Skip silently if apt version is too old
APT_VERSION=$(dpkg -s apt | grep "^Version" | cut -d" " -f2-)
if dpkg --compare-versions "${APT_VERSION}" ge "0.6.30"; then
	for k in $(find "${KEYDIR}" -name "*.key"); do
		# On error, error message will be logged, but we should continue with other keys
		echo "I: Adding apt key ${k}: " $(apt-key add "${k}")
	done
fi
