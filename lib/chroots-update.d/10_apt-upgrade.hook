APTGET="apt-get -q -o APT::Install-Recommends=false"
EXTRA_PACKAGES="build-essential fakeroot ccache"

export DEBIAN_FRONTEND="noninteractive"

${APTGET} update
${APTGET} --yes --ignore-missing dist-upgrade
${APTGET} --yes install ${EXTRA_PACKAGES}
# Call autoremove if we have apt 0.7.7 or better
APT_VERSION=$(dpkg -s apt | grep ^Version | cut -d" " -f2-)
if dpkg --compare-versions "${APT_VERSION}" ge "0.7.7"; then
	${APTGET} --yes --purge autoremove
fi
${APTGET} clean
